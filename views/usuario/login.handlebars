<head>
    <style>
       input[type="text"],
        input[type="password"] {
        width: 400px; /* Ajuste o valor para a largura desejada */
        margin: 0 auto; /* Centraliza horizontalmente */
        }
    </style>
</head>
<form id="loginForm" action="/login" method="post">
    <div class="form-group">
        <label for="inputLogin">Login</label>
        <input type="text" class="form-control" id="inputLogin" name="login">
    </div>
        <div class="form-group">
        <label for="inputSenha">Senha</label>
        <input type="password" class="form-control" id="inputSenha" name="senha">
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>

    <div class="mt-3 text-center">
        <button id="externalAccessButton" type="button" class="btn btn-outline-secondary">Acessar como Usuário Externo</button>
    </div>

    <script>
        // Botão para acessar como usuário externo
        const externalAccessButton = document.getElementById('externalAccessButton');
        const loginForm = document.getElementById('loginForm');

        // Adicionar evento de clique no botão
        externalAccessButton.addEventListener('click', () => {
            // Preencher o formulário com as credenciais do usuário externo
            document.getElementById('inputLogin').value = 'externo';
            document.getElementById('inputSenha').value = '1234';

            // Submeter o formulário
            loginForm.submit();
        });
    </script>
<!DOCTYPE html>
<html>
